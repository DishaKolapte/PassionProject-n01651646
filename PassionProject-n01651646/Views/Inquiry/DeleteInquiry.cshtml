@model PassionProject_n01651646.Models.InquiryDto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Inquiry</h2>

<h3>Are you sure you want to delete this inquiry?</h3>

<div>
    <label>Pet Name:</label> @Model.PetName
</div>
<div>
    <label>Username:</label> @Model.Username
</div>
<div>
    <label>Inquiry Text:</label> @Model.InquiryText
</div>

<form method="POST" action="/Inquiry/Delete/@Model.InquiryId">
    <input type="hidden" name="InquiryId" value="@Model.InquiryId" />
    <div>
        <input type="submit" value="Delete" />
        <a href="/Inquiry/List">Cancel</a>
    </div>
</form>
