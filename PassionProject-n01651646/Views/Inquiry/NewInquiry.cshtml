@{
    ViewBag.Title = "Create Inquiry";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Create Inquiry</h2>
            <form action="/Inquiry/Create" method="POST">
                <input type="hidden" name="PetId" value="@ViewBag.PetId" />
                <div class="form-group">
                    <label for="PetName">Pet Name</label>
                    <input type="text" class="form-control" id="PetName" name="PetName" placeholder="Enter pet name" />
                </div>
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter username" />
                </div>
                <div class="form-group">
                    <label for="InquiryText">Inquiry Text</label>
                    <textarea class="form-control" id="InquiryText" name="InquiryText" rows="4" placeholder="Enter inquiry text"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Inquiry</button>
            </form>
        </div>
    </div>
</div>
