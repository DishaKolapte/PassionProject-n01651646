
@{
    ViewBag.Title = "List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>List of Pets</h2>
        <a href="/Pet/New" class="btn btn-primary">Add New Pet</a>
    </div>
    <div class="list-group">
        @foreach (var pet in Model)
        {
            <a href="/Pet/Details/@pet.PetId" class="list-group-item list-group-item-action">
                <h5 class="mb-1">@pet.Name</h5>
                <p class="mb-1"><strong>Species:</strong> @pet.Species</p>
                <p class="mb-1"><strong>Breed:</strong> @pet.Breed</p>
                <p class="mb-1"><strong>Age:</strong> @pet.Age years</p>
            </a>
            <a href="/Inquiry/NewInquiry?PetId=@pet.PetId" class="btn btn-primary mb-4">Create New Inquiry</a>
        }
    </div>
</div>

