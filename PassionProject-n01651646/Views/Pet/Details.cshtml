@model PassionProject_n01651646.Models.PetDto

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <a href="@Url.Action("List", "Pet")" class="btn btn-primary mb-3">Go back to list</a>
            <div class="card">
                <div class="card-header">
                    <h2>@Model.Name</h2>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Species:</strong> @Model.Species</p>
                    <p class="card-text"><strong>Breed:</strong> @Model.Breed</p>
                    <p class="card-text"><strong>Age:</strong> @Model.Age years</p>
                </div>
            </div>
            <div class="mt-4">
                <h3>Inquiries for @Model.Name</h3>
                <ul class="list-group">
                    @foreach (var inquiry in ViewBag.Inquiries)
                    {
                        <li class="list-group-item">
                            <strong>From: @inquiry.Username</strong><br />
                            @inquiry.InquiryText
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section scripts {

}
